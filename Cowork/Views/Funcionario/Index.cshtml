@model IEnumerable<Cowork.Models.Funcionario>

@{
    ViewData["Title"] = "Lista de Funcionários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Funcionários</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Funcionário</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

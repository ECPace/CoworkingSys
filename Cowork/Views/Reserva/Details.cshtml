@model Cowork.Models.Reserva

@{
    ViewData["Title"] = "Detalhes da Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes da Reserva</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data da Reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataReserva)
        </dd>
        <dt class="col-sm-2">
            Horário de Início
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HorarioInicio)
        </dd>
        <dt class="col-sm-2">
            Horário de Fim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HorarioFim)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            Sala
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sala.Nome)
        </dd>
        <dt class="col-sm-2">Valor Total</dt>
        <dd class="col-sm-10">@Model.ValorTotal.ToString("C")</dd>
        <dt class="col-sm-2">
            Funcionários Envolvidos
        </dt>
        <dd class="col-sm-10">
            @foreach (var funcionario in Model.Funcionarios)
            {
                <p>@funcionario.Nome</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@model Cowork.Models.Reserva

@{
    ViewData["Title"] = "Detalhes da Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes da Reserva</h1>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data da Reserva
        </dt>
        <dd class="col-sm-10">
            @Model.DataReserva.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Horário de Início
        </dt>
        <dd class="col-sm-10">
            @Model.HorarioInicio
        </dd>
        <dt class="col-sm-2">
            Horário de Fim
        </dt>
        <dd class="col-sm-10">
            @Model.HorarioFim
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nome
        </dd>
        <dt class="col-sm-2">
            Sala
        </dt>
        <dd class="col-sm-10">
            @Model.Sala.Nome
        </dd>
        <dt class="col-sm-2">Valor Total</dt>
        <dd class="col-sm-10">@Model.ValorTotal.ToString("C")</dd>
        <dt class="col-sm-2">
            Funcionários
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var funcionario in Model.Funcionarios)
                {
                    <li>@funcionario.Nome</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar para a Lista</a>
</div>
@model Cowork.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Reserva</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="DataReserva" class="control-label"></label>
        <input asp-for="DataReserva" class="form-control" type="date" />
        <span asp-validation-for="DataReserva" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HorarioInicio" class="control-label"></label>
        <input asp-for="HorarioInicio" class="form-control" type="time" />
        <span asp-validation-for="HorarioInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HorarioFim" class="control-label"></label>
        <input asp-for="HorarioFim" class="form-control" type="time" />
        <span asp-validation-for="HorarioFim" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClienteId" class="control-label">Cliente</label>
        <select asp-for="ClienteId" asp-items="ViewBag.ClienteId" class="form-control"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SalaId" class="control-label">Sala</label>
        <select asp-for="SalaId" asp-items="ViewBag.SalaId" class="form-control"></select>
        <span asp-validation-for="SalaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Funcionarios" class="control-label">Funcionários</label>
        <select name="funcionariosSelecionados" id="Funcionarios" class="form-control" multiple="multiple">
            @foreach (var funcionario in ViewBag.Funcionarios)
            {
                <option value="@funcionario.Id">@funcionario.Nome</option>
            }
        </select>
    </div>

    <div>
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>
